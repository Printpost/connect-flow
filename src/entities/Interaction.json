{
  "name": "Interaction",
  "type": "object",
  "properties": {
    "contact_id": {
      "type": "string",
      "description": "ID do contato"
    },
    "contact_name": {
      "type": "string",
      "description": "Nome do contato"
    },
    "channel": {
      "type": "string",
      "enum": [
        "email",
        "sms",
        "whatsapp",
        "rcs",
        "telefone",
        "chat",
        "video"
      ],
      "description": "Canal da intera\u00e7\u00e3o"
    },
    "type": {
      "type": "string",
      "description": "Tipo de intera\u00e7\u00e3o"
    },
    "description": {
      "type": "string",
      "description": "Descri\u00e7\u00e3o da intera\u00e7\u00e3o"
    },
    "sentiment": {
      "type": "string",
      "enum": [
        "feliz",
        "calmo",
        "insatisfeito",
        "neutro"
      ],
      "description": "Sentimento do contato"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags da intera\u00e7\u00e3o"
    },
    "interaction_date": {
      "type": "string",
      "format": "date-time",
      "description": "Data e hora da intera\u00e7\u00e3o"
    },
    "converted": {
      "type": "boolean",
      "default": false,
      "description": "Se houve convers\u00e3o"
    }
  },
  "required": [
    "contact_id",
    "channel",
    "type",
    "interaction_date"
  ]
}